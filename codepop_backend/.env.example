# PostgreSQL (used by Django and docker-compose)
POSTGRES_DB=codepop_database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# For local dev without Docker, set POSTGRES_HOST=127.0.0.1
# For Docker, POSTGRES_HOST=db is set by docker-compose
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# Frontend: set API base URL in codepop/ip_address.js
# Local: http://localhost:8000
# Android emulator: http://10.0.2.2:8000
